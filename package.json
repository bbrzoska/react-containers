{
  "name": "@zendeskgarden/react-containers",
  "private": true,
  "scripts": {
    "format": "yarn format:js && yarn format:markdown",
    "format:js": "prettier --loglevel warn --write '{packages/**/!(dist|umd),utils/**}/*.js'",
    "format:markdown": "prettier --loglevel warn --write '{packages/**/!(dist)/!(CHANGELOG)*.md,README.md}'",
    "postinstall": "lerna bootstrap",
    "lint": "yarn lint:js && yarn lint:markdown",
    "lint:js": "eslint packages/*/src/ utils/ --max-warnings 0",
    "lint:markdown": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/create-package.js",
    "test": "yarn test:all --watch",
    "test:all": "jest --config=utils/test/jest.config.js"
  },
  "devDependencies": {
    "@zendeskgarden/eslint-config": "^7.0.9",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.4.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-notice": "^0.7.7",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "handlebars": "^4.0.12",
    "handlebars-helpers": "^0.10.0",
    "husky": "^1.2.0",
    "inquirer": "^6.2.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "lerna": "^3.4.3",
    "markdownlint-cli": "^0.13.0",
    "prettier": "^1.15.2",
    "prettier-package-json": "^2.0.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-styleguidist": "^8.0.5",
    "webpack": "^4.26.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format"
    }
  }
}
